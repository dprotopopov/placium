@using System.Collections
@model MySql.QueryTools.WebApp.Models.QueryViewModel

@{
    ViewData["Title"] = "Query Page";
}

<div class="text-center">
    @using (Html.BeginForm("Index", "Query", FormMethod.Post))
    {
        @Html.TextAreaFor(m => m.Query, new {style = "width: 100%; height:5em;"})
        <p>
            <input type="submit"/>
        </p>
    }

    @if (Model?.Items != null)
    {
        <div style="max-height: calc(100vh - 15em); overflow: auto; width: 100%;">
            <table border="1" cellpadding="0" cellspacing="0" style="min-width: 100%;">
                <tbody>
                <tr>
                    @foreach (var value in Model.Headers)
                    {
                        <th>@value</th>
                    }
                </tr>

                @foreach (var row in Model.Items)
                {
                    <tr>
                        @foreach (var value in (ArrayList) row)
                        {
                            <td>@value</td>
                        }
                    </tr>
                }
                </tbody>
            </table>
        </div>
    }

    <div style="height: 5em; overflow: auto; width: 100%;">
        @Html.DisplayTextFor(m => m.Error)
    </div>
</div>